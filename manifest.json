{
  "manifest_version": 3,
  "name": "SecureWeb - Privacy Access Management System",
  "version": "1.2.0",
  "description": "Zero-Trust privacy access management: blocks malicious code, risky downloads, sensor abuse, and supports per-site risk scoring.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "notifications",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "behavior.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content_protector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
